SCRIPT_PATH="${BASH_SOURCE[0]}"
SCRIPT_PATH="$(readlink -f "$SCRIPT_PATH")"

if [ -x "$(command -v "${LLVM_CONFIG}")" ]; then
    LLVM_CONFIG="$(readlink -f "$LLVM_CONFIG")"
    if [ "$LLVM_CONFIG" != "$SCRIPT_PATH" ]; then
	exec "${LLVM_CONFIG}" "$@"
    fi
fi

CANDIDATES=("llvm-config-20"
	    "llvm-config-19"
	    "llvm-config-18"
            "llvm-config-17"
            "llvm-config-16"
            "llvm-config-15")

for CMD in "${CANDIDATES[@]}"; do
    if [ -x "$(command -v "${CMD}")" ]; then
	exec "${CMD}" "$@"
    fi
done

exit 1
