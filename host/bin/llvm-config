if [ -x "$(command -v "${LLVM_CONFIG}")" ]; then
    exec "${LLVM_CONFIG}"
fi

CANDIDATES=("llvm-config-18"
            "llvm-config-17"
            "llvm-config-16"
            "llvm-config-15")

for LLVM_CONFIG in "${CANDIDATES[@]}"; do
    if [ -x "$(command -v "${LLVM_CONFIG}")" ]; then
	exec "${LLVM_CONFIG}" "$@"
    fi
done

exit 1
